<% include ./partials/header %>

<div class="container"> 
    <div class="columns">
        <div class="column is-7 has-text-centered">

          <div class="profile-box">
            <div class="card">
                    <div class="card-content">
                      <div class="media">
                        <div class="media-left">
                          <figure class="image is-96x96">
                            <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
                          </figure>
                        </div>
                        <div class="media-content">
                          <p class="title is-4"><%=user.name%></p>
                          <p class="subtitle is-6">@<%=user.username%></p>
                        </div>
                        <div class="media-right">
                          <a class="button" href="/edit">Edit</a>
                        </div>
                      </div>
                  
                      <div class="content">
                        <div class="biography has-text-left">
                                <%=user.biography%>
                        </div>
                      </div>
                    </div>
                  </div>
                  <% var lastPage = currentPage - 1 %>
                  <% for (var currentFweet = currentPage * 10; currentFweet >= lastPage * 10; currentFweet--) { %>          
                    <% if (currentFweet < user.fweets.length) {%>             
                      <%- include('./partials/view_fweet.ejs', {fweet: user.fweets[currentFweet]}); %>
                      <%}%>
                  <% } %>
        </div>

        </div>
        <div class="column is-5 has-text-centered">

        </div>
    </div>
</div>

<% include ./partials/footer %>